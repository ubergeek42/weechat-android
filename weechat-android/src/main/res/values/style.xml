<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Weechat" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/doge</item>
    </style>

    <!-- honey comb & lower action button approximation -->

    <style name="ActionButton">
        <item name="android:background">?actionBarItemBackground</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
    </style>

    <color name="doge">#FF1B1F22</color>
    <color name="open">@android:color/white</color>

</resources>